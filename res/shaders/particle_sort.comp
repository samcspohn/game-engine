void radix(uint g_id){
    uint index;
    // first pass
    if(stage == 0){
        index = _input[g_id].key;
        atomicAdd(histo[index],1);
    }

    if(stage == 1){
        uint start = g_id * block_sum_size;
        uint end = start + block_sum_size;
        
        uint temp = histo[start];
        histo[start] = 0;
        for(uint i = start + 1; i < end; i++){
            uint temp2 = histo[i];
            histo[i] = temp;
            temp += temp2;
        }
        block_sums[g_id] = temp;
    }

    if(stage == 2){
        uint temp = block_sums[0];
        block_sums[0] = 0;
        for(uint i = 1; i < block_sum_size; i++){
            uint temp2 = block_sums[i];
            block_sums[i] = temp;
            temp += temp2;
        }
    }

    if(stage == 3){
        // uint group_id = gl_WorkGroupID.x;
        histo[g_id] += block_sums[g_id/block_sum_size];
    }
    else if(stage == 4){
        d item = _input[g_id]; 
        index = item.key;
        particle p1 = particles[item.id];
        renderParticle rp;
        rp.emitterID = p1.emitter;
        rp.scale = p1.scale;
        rp.life = p1.life;
        rp.emitterProtoID = p1.emitter_prototype;
        if(prototypes[p1.emitter_prototype].trail == 1){
            rp.pos1 = p1.position;

            if(p1.next < -1 && emitters[-p1.next - 2].last == item.id){
                rp.pos2 = transforms[emitters[p1.emitter].transform].position;
            }else if (particles[p1.next].prev == item.id){
                rp.pos2 = particles[p1.next].position;
            }
            if(length(rp.pos2 - rp.pos1) > 100)
                rp.pos2 = rp.pos1;
                
        }else{
            vec3 point = (rotate(identity(),p1.rotation) * vec4(0,1,0,1)).xyz * rp.scale.x * 0.5f;
            rp.pos1 = p1.position - point;
            rp.pos2 = p1.position + point;
        }
            render[atomicAdd(histo[index],1)] = rp;
        
        // _output[atomicAdd(histo[index],1)] = item;
    }

    // // second pass
    // else if(stage == 3){
    //     index = data2[gid].key >> 16;
    //     atomicAdd(counts[index],1);
    // }
    // else if(gid == 0 && stage == 4){
    //     offsets[0] = 0;
    //     for(int i = 1; i < 65536; i++){
    //         offsets[i] = offsets[i - 1] + counts[i - 1];
    //     }
    // }else if(stage == 5){
    //     index = data2[gid].key >> 16;
    //     data1[atomics[0] - atomicAdd(offsets[index],1)] = data2[gid];
    // }
}


