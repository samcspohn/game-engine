void main () {
    uint gid = gl_GlobalInvocationID.x;
    uint index;
    if(gid >= count)
        return;
    if(stage == -2)
        histo[gid] = 0;
    if(stage == -1){
        vec3 v = (vp * vec4(particles[gid].position,1)).xyz;
        if(particles[gid].live == 1 && v.z > 0){// && abs(v.x / v.z) < 1.1 && abs(v.y / v.z) < 1.1){
            index = atomicAdd(atomics[0],1);
            d item;
            item.key =  ~floatBitsToUint(v.z) << 1;
            item.key = item.key >> 16;
            item.id = gid;
            _input[index] = item;
            // _input[index].id = gid;
        }
    }
    else{
        // radix2(gid);
        radix(gid);
