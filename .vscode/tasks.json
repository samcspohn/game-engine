        },
        {
            "label": "mk rls dir",
            "command": "mkdir", // Could be any other shell command
            "args": ["release", "-p"],
            "type": "shell"
        },
        {
            "label": "cmakeRelease",
            "dependsOn":"mk rls dir",
            "options": {
                "cwd": "${workspaceFolder}/release"
            },
            "command": "cmake -DBUILD_DEBUG=OFF ..", // Could be any other shell command
            "type": "shell"
        },
        {
