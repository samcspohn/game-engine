            "dependsOn":"mk dbg dir",
            "options": {
                "cwd": "${workspaceFolder}/debug"
            },
            "command": "cmake", // Could be any other shell command
            "args":["-DBUILD_DEBUG=ON", ".."],
            "type": "shell"
        },
